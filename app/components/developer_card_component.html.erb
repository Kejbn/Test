<div class="relative border-b border-gray-200">
  <% if featured? %>
    <div class="absolute top-0 left-0 m-1.5 sm:m-2.5 pointer-events-none">
      <%= inline_svg_tag "icons/solid/star.svg", class: "w-6 h-6 text-blue-600" %>
      <span class="sr-only">Featured developer</span>
    </div>
  <% end %>

  <%= link_to developer, class: "bg-white hover:bg-gray-50 #{"bg-blue-50 hover:bg-blue-100" if featured?} px-4 py-6 sm:p-6 flex space-x-4 sm:space-x-8" do %>
    <div class="shrink-0">
      <%= render AvatarComponent.new(avatarable: developer) %>
    </div>

    <div class="self-start flex-1 min-w-0">
      <div class="flex items-baseline">
        <h2 class="text-lg sm:text-xl font-medium text-gray-900 line-clamp-2 break-word" title="<%= hero %>">
          <%= hero %>
        </h2>

        <div class="hidden sm:inline-flex ml-auto flex-row-reverse shrink-0 items-center text-gray-400">
          <%= render AvailabilityComponent.new(developer: developer) %>
        </div>
      </div>

      <div class="mt-2 text-sm sm:text-base text-gray-700 space-y-4">
        <p class="line-clamp-3 break-words"><%= bio %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="flex flex-col space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4 items-start">
  <% if featured? %>
    <%= render BadgeComponent.new(t(".featured"), color: "blue") %>
  <% end %>
  <% if recently_active? %>
    <%= render BadgeComponent.new(t(".recently_active"), color: "green") %>
  <% end %>
  <% if source_contributor? %>
    <%= render BadgeComponent.new(t(".source_contributor"), color: "gray") %>
  <% end %>

  <% case response_rate %>
  <% when 90 %>
    <%= render BadgeComponent.new(t(".response_rate", percentage: response_rate), color: "indigo") %>
  <% when 100 %>
    <%= render BadgeComponent.new(t(".response_rate", percentage: response_rate), color: "purple") %>
  <% end %>
</div>

<div class="relative">
  <div class="bg-white hover:bg-gray-50 px-4 py-6 sm:p-6 flex space-x-4 sm:space-x-8">
    <div class="shrink-0">
      <%= image_tag avatar_file_name, class: classes_for_avatar %>
    </div>

    <div class="self-start flex-1 min-w-0 space-y-3">
      <div class="flex items-baseline">
        <%= tag.h2 title: hero, class: "text-lg sm:text-xl font-medium text-gray-900 line-clamp-2 break-word" do %>
          <%= hero %>
        <% end %>

        <div class="hidden sm:inline-flex ml-auto flex-row-reverse shrink-0 items-center text-gray-400">
          <div class="flex items-center text-gray-900">
            <%= inline_svg_tag "icons/solid/check_circle.svg", class: "h-5 w-5 text-green-500", aria_hidden: true %>
            <span class="ml-2 text-sm font-medium text-green-700">Available now</span>
          </div>
        </div>

      </div>

      <div class="text-sm sm:text-base text-gray-700 space-y-4">
        <p class="line-clamp-3 break-words"><%= developer.bio %></p>
      </div>
    </div>
  </div>
</div>

<%= tag.div class: class_names("relative", "border-b": highlight?) do %>
  <%= link_to developer, class: class_names("bg-white hover:bg-gray-50 px-4 py-6 sm:p-6 flex space-x-4 sm:space-x-8", "border-l-4 border-blue-400": highlight?) do %>
    <div class="shrink-0">
      <%= render AvatarComponent.new(avatarable: developer, variant: :medium) %>
    </div>

    <div class="self-start flex-1 min-w-0">
      <div class="flex items-baseline">
        <h2 class="text-lg sm:text-xl font-medium text-gray-900 line-clamp-2 break-word" title="<%= hero %>">
          <%= hero %>
        </h2>

        <div class="hidden sm:inline-flex ml-auto flex-row-reverse shrink-0 items-center text-gray-400">
          <%= render Developers::AvailabilityComponent.new(developer: developer) %>
        </div>
      </div>

     <div class="mt-1 pb-1">
        <% if featured? %>
          <%= render Developers::BadgeComponent.new(t(".featured"), classes: "inline-flex items-center rounded-md px-2.5 py-0.5 text-sm font-medium bg-blue-100 text-blue-800") %>
        <% end %>
        <% if recently_active? %>
          <%= render Developers::BadgeComponent.new(t(".recently_active"), classes: "inline-flex items-center rounded-md px-2.5 py-0.5 text-sm font-medium bg-green-100 text-green-800") %>
        <% end %>
      </div>

      <div class="mt-2 text-sm sm:text-base text-gray-700 space-y-4">
        <p class="line-clamp-3 break-words"><%= strip_tags bio %></p>
      </div>
    </div>
  <% end %>
<% end %>

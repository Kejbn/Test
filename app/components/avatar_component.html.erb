<%= tag.picture do %>
  <%= tag.source media: "(-webkit-min-device-pixel-ratio: 2), (min-resolution: 2dppx)", srcset: avatar_image_2x_url %>
  <%= image_tag avatar_image_url, alt: "#{name} avatar", data:, class: {"#{classes}": true, "bg-navy": Feature.enabled?(:redesign), "bg-gray-300": !Feature.enabled?(:redesign)} %>
<% end %>

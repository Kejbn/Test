<div class="pt-4">
  <%= link_to pricing_path, class: "block group bg-gray-50 w-full border-2 border-gray-300 hover:border-gray-400 border-dashed rounded-lg py-6 px-10 text-center" do %>
    <%= inline_svg_tag "icons/outline/lock_closed.svg", class: "mx-auto h-8 w-8 text-gray-400 group-hover:hidden", aria_hidden: true %>
    <%= inline_svg_tag "icons/outline/lock_open.svg", class: "mx-auto h-8 w-8 text-gray-600 rotate-[-8deg] transition hidden group-hover:block", aria_hidden: true %>
    <span class="block mt-2 text-sm font-medium text-gray-600"><%= title %></span>
    <span class="block mt-2 text-sm text-gray-500"><%= description %></span>
  <% end %>
</div>

<div class="text-center">
  <%= tag.h2 @title, class: "text-5xl font-heading font-bold tracking-tight leading-tight" %>

  <% if @subtitle_1 || @subtitle_2 %>
    <p class="leading-loose mt-5">
      <%= tag.span(@subtitle_1, class: "block") if @subtitle_1 %>
      <%= tag.span(@subtitle_2, class: "block") if @subtitle_2 %>
    </p>
  <% end %>
</div>

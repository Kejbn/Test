<%= button_tag type: :submit, class: "group #{button_clasess}" do %>
  <span class="show group-disabled:hidden"><%= text %></span>

  <%= inline_svg_tag "icons/loading.svg", class: "hidden group-disabled:inline" %>

  <% if disable_with %>
    <span class="hidden group-disabled:inline"><%= disable_with %></span>
  <% end %>
<% end %>

<%= form_with model: @form do |form| %>
  <%= render Admin::Forms::ContainerComponent.new("Did you find a job through RailsDevs?", "Congrats on your new job! Tell us about it and we'll send you a custom RailsDevs celebration package free.") do |container| %>
    <%= render Admin::Forms::FieldComponent.new(form, :address, label: "Mailing address", help: "Where can we send your celebration package?") do |field| %>
      <%# TODO: Need a new component for text area input. %>
      <% field.with_input_text type: :text %>
    <% end %>

    <%= render Admin::Forms::FieldComponent.new(form, :company, label: "Company name") do |field| %>
      <% field.with_input_text type: :text %>
    <% end %>

    <%= render Admin::Forms::FieldComponent.new(form, :position) do |field| %>
      <% field.with_input_text type: :text %>
    <% end %>

    <%= render Admin::Forms::FieldComponent.new(form, :start_date) do |field| %>
      <% field.with_input_text type: :date %>
    <% end %>

    <%= render Admin::Forms::FieldComponent.new(form, :employment_type) do |field| %>
      <% field.with_input_select options: Hired::Form.employment_types, include_blank: true %>
    <% end %>

    <%= render Admin::Forms::FieldComponent.new(form, :feedback) do |field| %>
      <%# TODO: Need a new component for text area input. %>
      <% field.with_input_text type: :text %>
    <% end %>

    <% container.with_button_group do %>
      <%= render SubmitButtonComponent.new(text: "Request package", disable_with: "Requesting...") %>
    <% end %>
  <% end %>
<% end %>

<%= open_graph_tags title: t(".title_og"), turbo_native_title: t(".turbo_native_title"), description: t(".description_og") %>

<div class="bg-navy">
  <div class="flex items-start justify-center max-w-6xl mx-auto px-8 py-32 -mt-24 bg-gradient-radial from-navy-gradient via-navy to-navy sm:-mt-36 sm:pt-48">
    <div class="hidden flex-shrink-0 h-80 w-80 bg-gray-300 lg:block xl:h-86 xl:w-86"></div>
    <div class="lg:ml-16 xl:ml-28">
      <h1 class="text-3xl tracking-tight font-heading text-white lg:text-4xl xl:text-5xl">
        <%= t(".title_1") %>
        <span class="text-teal"><%= t(".title_accent") %></span>
        <%= t(".title_2") %>
      </h1>
      <p class="mt-3 text-sm text-white font-light leading-8 md:text-base md:mt-5">
        <%= t(".subtitle_1") %>
        <span><%= t(".subtitle_2") %></span>
        <span class="md:block"><%= t(".subtitle_3") %></span>
      </p>
      <div class="mt-5 md:mt-8">
        <div class="rounded-md shadow">
          <%= link_to new_role_path, class: "relative inline-flex items-center px-10 py-4 font-heading text-typography text-lg bg-green rounded-full font-semibold hover:bg-green-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-navy focus:ring-white" do %>
            <%= t(".get_started") %>
            <%= inline_svg_tag "icons/solid/arrow_long_right.svg", class: "text-typography ml-3 -mr-1 h-6 w-6", aria_hidden: true %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="max-w-5xl mx-auto mt-24 mx-auto sm:mt-32">
  <div class="pb-5 px-4 lg:px-0 sm:flex sm:items-center sm:justify-between">
    <h2 class="text-lg leading-6 font-medium text-gray-900">
      <%= t(".available_developers") %>
    </h2>
  </div>

  <div class="shadow overflow-hidden sm:rounded-md divide-y divide-gray-200">
    <%= render Developers::CardComponent.with_collection(@developers) %>
  </div>

  <div class="mt-8 mb-16 text-right mr-2 lg:mr-0">
    <%= link_to developers_path, class: "inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
      <%= t(".more") %>
      <%= inline_svg_tag "icons/outline/arrow_right_circle.svg", class: "ml-3 -mr-1 h-5 2-5", aria_hidden: true %>
    <% end %>
  </div>
</div>

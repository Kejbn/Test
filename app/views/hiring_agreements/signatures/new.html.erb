<%= render "shared/error_messages", resource: @signature %>

<div class="min-h-full flex flex-col justify-center sm:px-6 lg:px-8">
  <div class="mx-auto mt-8">
    <div class="px-0 sm:px-6 lg:px-8">
      <div class="mt-8 sm:px-6">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-5 sm:px-6 flex">
            <div class="flex-grow">
              <h3 class="text-lg leading-6 font-medium text-gray-900">RailsDevs hiring agreement</h3>
              <p class="mt-1 text-sm text-gray-500">Last updated <%= @signature.term.created_at.strftime("%b %d, %Y") %></p>
            </div>
          </div>

          <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
            <div class="prose-sm max-w-prose">
              <%= simple_format @signature.term.body %>
            </div>
          </div>

          <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
            <div class="prose-sm max-w-prose">
              <%= form_with(model: @signature, url: [:hiring_agreement, :signature]) do |form| %>
                <div class="flex space-x-4 justify-between items-center">
                  <div class="flex items-center space-x-2">
                    <%= form.check_box :agreement, class: "focus:ring-gray-500 h-4 w-4 text-gray-600 border-gray-300 rounded" %>
                    <span class="text-sm text-gray-600">
                      <%= form.label :agreement, "I agree to these terms", required: true %>
                    </span>
                  </div>
                  <%= render SubmitButtonComponent.new(text: "Accept agreement", disable_with: "Accepting...") %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="mt-8 px-6 prose">
          Questions? Email the founder – that's me, Joe! – at <%= link_to "joe@railsdevs.com", "mailto:joe@railsdevs.com", class: "font-medium no-underline hover:underline" %>.
        </div>
      </div>
    </div>
  </div>
</div>

<%= render Admin::ContainerComponent.new do %>
  <%= render Admin::HeadingComponent.new(t(".title")) %>

  <%= render Admin::ContentComponent.new do %>
    <%= render Admin::ListComponent.new do |list| %>
      <% list.with_cta t(".new"), new_admin_hiring_agreements_term_path %>

      <% @terms.each do |term| %>
        <% list.with_item term.created_at.strftime("%b %d, %Y"), term.body, path: admin_hiring_agreements_term_path(term) do |list_item| %>
          <% list_item.aside do %>
            <%= render Admin::BadgeComponent.new("Active") if term == @active_term %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
